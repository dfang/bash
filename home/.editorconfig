root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true

[*.{py,rst,txt}]
indent_style = space
trim_trailing_whitespace = true
indent_size = 4
end_of_line = LF

# 4 space indentation
[*.{py,mustache}]
indent_style = space
indent_size = 4

[*.yml]
indent_style = space
trim_trailing_whitespace = true
indent_size = 2
end_of_line = LF
